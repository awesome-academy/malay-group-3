<p>
  <%= gravatar_for review.user, size: 50 %>
  <%= link_to review.user.name, review.user %>
</p>

<p> <%= review.content %> </p>

<% if current_user.id==review.user.id || current_user.admin?  %>
  <%= link_to "edit the review", edit_course_review_path(review.course,review) %> |
  <%= link_to "delete the review", course_review_path(review.course, review) , method: :delete,data: { confirm: "You sure?" } %>
<% end %>
