<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
  	<section class="user_info">
  	  <h1>
  	   <%= gravatar_for @user %>
  	   <%= @user.name %>
  	  </h1>
  	</section>
  </aside>
</div>

<% if current_user.admin? && current_user.id == @user.id %>
  <%= "Manage other user's course" %>
  <%= render Register.pending %>

  <%= "check your course" %>
  <p><%= "PENDING REGISTRATION" %></p>
  <li> <%= render @user.registers.pending %></li>

  <p><%= "SUCCESSFULL REGISTRATION" %></p>
  <li><%= render @user.registers.approved %></li>

  <p><%= "FAILED REGISTRATION" %></p>
  <li><%= render @user.registers.rejected %></li>
 
<% else %>
  <p><%= "PENDING REGISTRATION" %></p>
  <li> <%= render @user.registers.pending %></li>

  <p><%= "SUCCESSFULL REGISTRATION" %></p>
  <li><%= render @user.registers.approved %></li>

  <p><%= "FAILED REGISTRATION" %></p>
  <li><%= render @user.registers.rejected %></li>

<% end %>
