<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home_head"), root_path, class: "glyphicon glyphicon-home" %></li>
        <li><%= link_to t(".help_head"), help_path, class: "glyphicon glyphicon-question-sign" %></li>
        <% if logged_in? %>
          <li><%= link_to t(".users_head"), users_path, class: "glyphicon glyphicon-user" %></li>
          <li class="dropdown">
            <%= link_to "#", {class: "dropdown-toggle", data: {"toggle" =>  "dropdown"}} do %>
              <%= t ".account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile_head"), current_user, class: "glyphicon glyphicon-education" %></li>
              <li><%= link_to t(".setting_head"), edit_user_path(current_user), class: "glyphicon glyphicon-edit" %></li>
              <li><%= link_to "Courses", courses_path, class: "glyphicon glyphicon-book" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".logout_head"), logout_path, class: "glyphicon glyphicon-log-out", method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".login_head"), login_path, class: "glyphicon glyphicon-user" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
