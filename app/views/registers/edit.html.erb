<% provide :title, t(".status") %>
<% provide :button_text, t(".button") %>

<h1><b><%= t ".heading" %></b></h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for [@course, @register] do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.label :status %><br>
      <%= f.select :status, Register.statuses.keys %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
